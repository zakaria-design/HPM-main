{
  "version": 2,
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.6.2" }
  },
  "buildCommand": "composer install && npm install && npm run build",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|ttf|woff|woff2)",
      "dest": "/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
