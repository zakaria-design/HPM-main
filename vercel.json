{
  "version": 2,
  "builds": [
    { "src": "api/index.php", "use": "vercel-php@0.6.2" },
    { "src": "resources/js/app.js", "use": "@vercel/static-build", "config": {"distDir": "public"} }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
